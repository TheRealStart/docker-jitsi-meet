#!/usr/bin/with-contenv bash

# make our folders
mkdir -p \
    /config/{nginx/site-confs,keys} \
    /run \
    /var/lib/nginx/tmp/client_body \
    /var/tmp/nginx

# generate keys (maybe)
if [[ $DISABLE_HTTPS -ne 1 ]]; then
    if [[ $ENABLE_LETSENCRYPT -eq 1 ]]; then
        if [[ ! -f /etc/letsencrypt/live/$LETSENCRYPT_DOMAIN/fullchain.pem ]]; then
            if ! certbot-auto \
                  certonly \
                  --no-self-upgrade \
                  --noninteractive \
                  --standalone \
                  --preferred-challenges http \
                  -d $LETSENCRYPT_DOMAIN \
                  --agree-tos \
                  --email $LETSENCRYPT_EMAIL ; then

                echo "Failed to obtain a certificate from the Let's Encrypt CA."
                # this tries to get the user's attention and to spare the
                # authority's rate limit:
                sleep 15
                echo "Exiting."
                exit 1
            fi
        fi

        # remove default certbot renewal
        if [[ -f /etc/cron.d/certbot ]]; then
            rm /etc/cron.d/certbot
        fi

        # setup certbot renewal script
        if [[ ! -f /etc/cron.daily/letencrypt-renew ]]; then
            cp /defaults/letsencrypt-renew /etc/cron.daily/
        fi
    else
        # use self-signed certs
        if [[ -f /config/keys/cert.key && -f /config/keys/cert.crt ]]; then
            echo "using keys found in /config/keys"
        else
            echo "generating self-signed keys in /config/keys, you can replace these with your own keys if required"
            SUBJECT="/C=US/ST=TX/L=Austin/O=jitsi.org/OU=Jitsi Server/CN=*"
            openssl req -new -x509 -days 3650 -nodes -out /config/keys/cert.crt -keyout /config/keys/cert.key -subj "$SUBJECT"
        fi
    fi
fi

# copy config files
tpl /defaults/nginx.conf > /config/nginx/nginx.conf

if [[ ! -f /config/nginx/meet.conf ]]; then
    tpl /defaults/meet.conf > /config/nginx/meet.conf
fi

if [[ ! -f /config/nginx/ssl.conf ]]; then
    tpl /defaults/ssl.conf > /config/nginx/ssl.conf
fi

if [[ ! -f /config/nginx/site-confs/default ]]; then
    tpl /defaults/default > /config/nginx/site-confs/default
fi

cp /defaults/config.js /config/config.js
tpl /defaults/system-config.js >> /config/config.js
tpl /defaults/settings-config.js >> /config/config.js
if [[ -f /config/custom-config.js ]]; then
    cat /config/custom-config.js >> /config/config.js
fi

MissedAppName="${$CUSTOM_APP_NAME:-Missed.com}"

if [[ ! -f /config/interface_config.js ]]; then
    cp /defaults/interface_config.js /config/interface_config.js

    sed -i \
        -e "s#Missed.com#$MissedAppName#g" \
        /config/interface_config.js

    # It will remove parameter 'closedcaptions' from TOOLBAR_BUTTONS if ENABLE_TRANSCRIPTIONS is false,
    # because it enabled by default, but not supported out of the box.
    if [[ $ENABLE_TRANSCRIPTIONS -ne 1 && "$ENABLE_TRANSCRIPTIONS" != "true" ]]; then
        sed -i \
            -e "s#'closedcaptions', ##" \
            /config/interface_config.js
    fi
fi

# Custom by Rustam
# make custom folders
mkdir -p \
    /config/{css,images,react/features/deep-linking/components,react/features/recording/components/Recording,react/features/welcome/components}

if [[ ! -f /config/title.html ]]; then
    cp /defaults/custom/title.html /config/title.html
    sed -i \
        -e "s#Missed.com#$MissedAppName#g" \
        /config/title.html
fi
# Copy all custom images
if [[ ! -f /config/favicon.ico ]]; then
    cp /defaults/custom/images/favicon.ico /config/favicon.ico
fi

if [[ ! -f /config/images/favicon.ico ]]; then
    cp /defaults/custom/images/favicon.ico /config/images/favicon.ico
fi

if [[ ! -f /config/images/logo.png ]]; then
    cp /defaults/custom/images/logo.png /config/images/logo.png
fi

if [[ ! -f /config/images/logo_square.png ]]; then
    cp /defaults/custom/images/logo_square.png /config/images/logo_square.png
fi

if [[ ! -f /config/images/logo-deep-linking.png ]]; then
    cp /defaults/custom/images/logo-deep-linking.png /config/images/logo-deep-linking.png
fi

if [[ ! -f /config/images/watermark.png ]]; then
    cp /defaults/custom/images/watermark.png /config/images/watermark.png
fi

# Copy all custom CSS
if [[ ! -f /config/css/_welcome_page.scss ]]; then
    cp /defaults/custom/css/_welcome_page.scss /config/css/_welcome_page.scss
fi

# Copy all custom JS
if [[ ! -f /config/react/features/deep-linking/components/DeepLinkingMobilePage.web.js ]]; then
    cp /defaults/custom/react/features/deep-linking/components/DeepLinkingMobilePage.web.js /config/react/features/deep-linking/components/DeepLinkingMobilePage.web.js
fi

if [[ ! -f /config/react/features/recording/components/Recording/styles.native.js ]]; then
    cp /defaults/custom/react/features/recording/components/Recording/styles.native.js /config/react/features/recording/components/Recording/styles.native.js
fi

if [[ ! -f /config/react/features/recording/components/Recording/styles.web.js ]]; then
    cp /defaults/custom/react/features/recording/components/Recording/styles.web.js /config/react/features/recording/components/Recording/styles.web.js
fi

if [[ ! -f /config/react/features/welcome/components/WelcomePage.web.js ]]; then
    cp /defaults/custom/react/features/welcome/components/WelcomePage.web.js /config/react/features/welcome/components/WelcomePage.web.js
fi

